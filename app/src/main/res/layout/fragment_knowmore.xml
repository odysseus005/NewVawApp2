<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/search_bar_height"
    android:background="@color/cardview_shadow_end_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:orientation="vertical"
            android:padding="@dimen/activity_vertical_margin"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view1"
                android:layout_width="fill_parent"
                android:layout_height="158dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp">

                <ImageButton
                    android:id="@+id/btn1"
                    android:layout_width="match_parent"
                    android:layout_height="158dp"
                    android:background="@drawable/k_whatyoushouldknow" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:gravity="left|start"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/titleText2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="What you"
                        android:gravity="left"
                        android:textColor="@color/colorText"
                        android:textSize="24sp" />
                    <TextView
                        android:id="@+id/titleText4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="should know"
                        android:gravity="left"
                        android:textColor="@color/colorText"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/titleText3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="about VAW?"
                        android:gravity="left"
                        android:textColor="@color/colorText"
                        android:textSize="34sp"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="fill_parent"
                android:layout_height="158dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp">

                    <ImageButton
                        android:id="@+id/btn2"
                        android:layout_width="wrap_content"
                        android:layout_height="158dp"
                        android:background="@drawable/k_antivawlaws"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view3"
                android:layout_width="fill_parent"
                android:layout_height="158dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp"
                >

                    <ImageButton
                        android:id="@+id/btn5"
                        android:layout_width="wrap_content"
                        android:layout_height="158dp"
                        android:background="@drawable/k_safetytips"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:gravity="right|bottom"
                    android:orientation="vertical"
                    android:padding="@dimen/activity_horizontal_margin">

                    <TextView
                        android:id="@+id/titleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Safety Tips for"
                        android:textColor="@color/colorText"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/titleText1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Young Women"
                        android:textColor="@color/colorText"
                        android:textSize="34sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view4"
                android:layout_width="fill_parent"
                android:layout_height="158dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp">

                    <ImageButton
                        android:id="@+id/btn4"
                        android:layout_width="wrap_content"
                        android:layout_height="158dp"
                        android:background="@drawable/k_areyouinanabusive"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:gravity="center|start"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/titleText7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Are you in an"
                        android:gravity="right"
                        android:textColor="@color/colorRed"
                        android:textSize="22sp" />
                    <TextView
                        android:id="@+id/titleText8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Abusive\nRelationship?"
                        android:gravity="right"
                        android:textColor="@color/colorRed"
                        android:textSize="26sp"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view5"
                android:layout_width="fill_parent"
                android:layout_height="158dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp">

                <ImageButton
                    android:id="@+id/btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="158dp"
                    android:background="@drawable/k_thingstoconsider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:gravity="left|start"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/titleText5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Things to"
                        android:gravity="left"
                        android:textColor="@color/colorText"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/titleText6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Consider"
                        android:gravity="left"
                        android:textColor="@color/colorText"
                        android:textSize="34sp"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

</android.support.v4.widget.NestedScrollView>
